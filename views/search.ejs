<h1 class="pb-4">Search Results</h1>


<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(recipeItem!="") {%>
  <% for(let item of recipeItem){ %>
  <a href="/recipe/<%=item._id%>" class="col text-center category_link">
    <div class="category__img category__img--large shadow">
      <img src="uploads/<%=item.image%>" alt="<%=item.name%>" loading="lazy">
    </div>
    <div class="pt-1"><%= item.name %></div>
  </a>
  <% } %>
  <% }else{ %>
  <p>No item Found</p>
  <% } %>

</div>